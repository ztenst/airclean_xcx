.popup-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: transparent;
}

.popup-wrapper .popup {
  box-sizing: border-box;
  position: absolute;
  width: 420rpx;
  margin-left: -210rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  line-height: 1.5;
  top: 80%;
  left: 50%;
  background: rgba(40, 40, 40, 0.75);
  text-align: center;
  border-radius: 5px;
  color: #fff;
  text-overflow: ellipsis;
}