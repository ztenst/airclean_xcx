<scroll-view class="overflow-scroll" scroll-y="true"
             style="top:{{listOpts.ToTop}}rpx;bottom:{{listOpts.ToBottom||0}}rpx;left:{{listOpts.ToLeft||0}}rpx;"
             scroll-top="0"
             lower-threshold="200"
             bindscrolltolower="loadMore"
             scroll-with-animation="true">

    <list list-data="{{listData}}" list-type="{{listOpts.listType}}" list-others="{{listOtherParams}}"></list>


    <view class="loadmore">
        <view class="nodata" wx:if="{{listScroll.nodata}}">
            <view class="loadmore__tips">{{listScroll.nodata_str || '暂无数据'}}</view>
        </view>
        <view class="loading" wx:if="{{listScroll.loading}}">
            <view class="icon-loading"></view>
            <view class="loadmore__tips">加载中...</view>
        </view>
    </view>


</scroll-view>
